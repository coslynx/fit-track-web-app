# PostgreSQL Database Connection
DATABASE_URL="postgresql://username:password@localhost:5432/fittrack_db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Google OAuth Credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Sentry Error Tracking
SENTRY_DSN="your-sentry-dsn"

# API Keys
FITBIT_API_KEY="your-fitbit-api-key"
STRAVA_API_KEY="your-strava-api-key"

# Redis Cache (for future scaling)
REDIS_URL="redis://username:password@localhost:6379"

# AWS S3 (for future file uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="your-aws-region"
AWS_BUCKET_NAME="your-s3-bucket-name"

# Mail Service
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
MAIL_FROM="noreply@fittrack.com"

# Feature Flags
ENABLE_SOCIAL_SHARING="true"
ENABLE_ADVANCED_ANALYTICS="false"

# Performance Monitoring
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"

# Security
JWT_SECRET="your-jwt-secret-key"
PASSWORD_SALT_ROUNDS="10"

# External Services
WEATHER_API_KEY="your-weather-api-key"
NUTRITION_API_KEY="your-nutrition-api-key"

# Development Mode Flag
NODE_ENV="development"